<?xml version="1.0" encoding="UTF-8"?>
<configuration>

	<property name="HOME_LOG" value="${user.home}/dvs.log" />

	<appender name="CONSOLE"
		class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern> %d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} -
				%msg%n </pattern>
		</encoder>
	</appender>

	<appender name="FILE-ROLLING"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${HOME_LOG}</file>

		<rollingPolicy
			class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
			<fileNamePattern>/logs/archived/app.%d{yyyy-MM-dd}.%i.log
			</fileNamePattern>
			<!-- Max log file size 10MB -->
			<maxFileSize>10MB</maxFileSize>
			<!-- Max total size of log files, if total size > 500MB, oldest log file 
				will be deleted -->
			<totalSizeCap>500MB</totalSizeCap>
			<!-- Logs are kept for 30 days -->
			<maxHistory>30</maxHistory>
		</rollingPolicy>

		<encoder>
			<pattern>%d %p %c{1.} [%t] %m%n</pattern>
		</encoder>
	</appender>

	<logger name="lt.vtmc.security.SecurityConfigurer" level="INFO"
		additivity="true">
		<appender-ref ref="FILE-ROLLING" />
		<appender-ref ref="CONSOLE" />
	</logger>

	<logger name="lt.vtmc.security.controller.SecurityController"
		level="INFO" additivity="true">
		<appender-ref ref="FILE-ROLLING" />
		<appender-ref ref="CONSOLE" />
	</logger>

	<logger name="lt.vtmc.user.controller.UserController"
		level="INFO" additivity="true">
		<appender-ref ref="FILE-ROLLING" />
		<appender-ref ref="CONSOLE" />
	</logger>

	<logger name="lt.vtmc.groups.controller.GroupController"
		level="INFO" additivity="true">
		<appender-ref ref="FILE-ROLLING" />
		<appender-ref ref="CONSOLE" />
	</logger>

	<logger name="lt.vtmc.docTypes.controllers.DocTypeController"
		level="INFO" additivity="true">
		<appender-ref ref="FILE-ROLLING" />
		<appender-ref ref="CONSOLE" />
	</logger>

	<logger name="lt.vtmc.documents.controller.DocumentController"
		level="INFO" additivity="true">
		<appender-ref ref="FILE-ROLLING" />
		<appender-ref ref="CONSOLE" />
	</logger>

	<logger
		name="lt.vtmc.statistics.controller.StatisticsController" level="INFO"
		additivity="true">
		<appender-ref ref="FILE-ROLLING" />
		<appender-ref ref="CONSOLE" />
	</logger>
	
	<logger
		name="lt.vtmc.files.controller.FilesController" level="INFO"
		additivity="true">
		<appender-ref ref="FILE-ROLLING" />
		<appender-ref ref="CONSOLE" />
	</logger>
	
	


	<root level="INFO">
		<appender-ref ref="CONSOLE" />
	</root>

</configuration>
